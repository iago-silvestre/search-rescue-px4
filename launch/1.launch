<?xml version="1.0"?>
<launch>
    <!-- MAVROS posix SITL environment launch script -->
    <!-- launches Gazebo environment and 2x: MAVROS, PX4 SITL, and spawns vehicle -->
    <!-- vehicle model and world -->
    <arg name="est" default="ekf2"/>
    <arg name="vehicle" default="iris"/>
    <arg name="world" default="$(find search-rescue-px4)/worlds/rescue.world"/>
    <!-- gazebo configs -->
    <arg name="gui" default="true"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
    <arg name="paused" default="false"/>
    <!-- camera settings -->
    <arg name="add_downward_camera" default="true"/>
    <arg name="camera_name" default="downward_cam"/>
    <!-- Delay before starting Gazebo -->
    <arg name="gazebo_delay" default="5.0"/> <!-- Delay in seconds -->

    <!-- PX4 SITL and vehicle spawn -->
    <!-- UAV0 -->
    <group ns="uav0">
        <!-- MAVROS and vehicle configs -->
        <arg name="ID" value="0"/>
        <arg name="fcu_url" default="udp://:14540@host.docker.internal:14580"/>
        <!-- PX4 SITL -->
        <include file="$(find px4)/launch/single_vehicle_spawn.launch">
            <arg name="x" value="0"/>
            <arg name="y" value="0"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="mavlink_udp_port" value="14560"/>
            <arg name="mavlink_tcp_port" value="4560"/>
            <arg name="ID" value="$(arg ID)"/>
            <arg name="gst_udp_port" value="$(eval 5600 + arg('ID'))"/>
            <arg name="video_uri" value="$(eval 5600 + arg('ID'))"/>
            <arg name="mavlink_cam_udp_port" value="$(eval 14530 + arg('ID'))"/>
            <!-- Add camera sensor -->
            <arg name="sdf" value="$(find search-rescue-px4)/models/iris_downward_cam/iris_downward_cam.sdf" if="$(arg add_downward_camera)"/>
        </include>
        <!-- MAVROS -->
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="$(arg fcu_url)"/>
            <arg name="gcs_url" value=""/>
            <arg name="tgt_system" value="$(eval 1 + arg('ID'))"/>
            <arg name="tgt_component" value="1"/>
        </include>

        <!-- Camera image processing -->
        <group if="$(arg add_downward_camera)">
            <node pkg="image_proc" type="image_proc" name="image_proc" ns="$(arg camera_name)"/>
            
            <!-- Optional: Add image view to see the camera output -->
            <node pkg="image_view" type="image_view" name="image_view" output="screen">
                <remap from="image" to="$(arg camera_name)/image_rect_color"/>
                <param name="autosize" value="true"/>
            </node>
        </group>
    </group>

    <!-- Delay before starting Gazebo -->
    <node name="gazebo_delay" pkg="rostest" type="rostest" args="--delay $(arg gazebo_delay)">
        <param name="gazebo_delay" value="$(arg gazebo_delay)"/>
    </node>

    <!-- Gazebo sim -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="gui" value="$(arg gui)"/>
        <arg name="world_name" value="$(arg world)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="verbose" value="$(arg verbose)"/>
        <arg name="paused" value="$(arg paused)"/>
    </include>
</launch>